{
  "atom": {
    "rewriteTsconfig": false
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "isolatedModules": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "filesGlob": [
    "**/**/*.ts"
  ],
  "files": [
    "typings/party.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
